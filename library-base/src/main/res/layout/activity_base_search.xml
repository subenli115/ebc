<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    tools:ignore="ResourceName">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_15"
        android:orientation="vertical">



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="15dp"
                    android:src="@mipmap/icon_back" />

                <RelativeLayout
                    android:layout_width="273dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@+id/iv_back">

                    <com.benwunet.base.view.ClearEditText
                        android:id="@+id/cet"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@color/black_29"
                        android:drawableLeft="@mipmap/icon_search"
                        android:drawablePadding="6dp"
                        android:hint="搜索"
                        android:imeOptions="actionSearch"
                        android:paddingStart="10dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textColorHint="@color/black_8e"
                        android:textSize="16sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="搜索"
                    android:textColor="@color/textColorYellow"
                    android:textSize="16sp" />
            </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索指定内容"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:layout_marginTop="47dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_97"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="名片"
                android:padding="3dp"
                android:background="@drawable/normal_bg_black_29"
                android:textColor="#CACACC"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:text="动态"
                android:background="@drawable/normal_bg_black_29"
                android:textColor="#CACACC"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:text="话题"
                android:background="@drawable/normal_bg_black_29"
                android:textColor="#CACACC"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:text="消息"
                android:background="@drawable/normal_bg_black_29"
                android:textColor="#CACACC"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="10dp"
                android:text="产品"
                android:background="@drawable/normal_bg_black_29"
                android:textColor="#CACACC"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </LinearLayout>

</layout>